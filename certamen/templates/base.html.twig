{# templates/base.html.twig #}
{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous" />
  <style>
    @import
    url('https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap');
    body {background-color:lightblue; font-family: 'Roboto Slab', serif;
    text-align:center}
  </style>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
{% endblock %}
<div class="mb-3" style="width: 200px;
  margin: auto;">
  <div class="col-auto">
    <ul class="list-group">
      <li class="list-group-item">
        <a href="{{ path('public_test') }}">Pública</a>
      </li>
      {# Usuario autentificado permitimos acceso zona privada y logout #}
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li class="list-group-item">
          <a href="{{ path('private_test') }}">Privada</a>
        </li>
        <li class="list-group-item">
          <a href="{{ path('app_logout') }}">Cerrar sesión</a>
        </li>
      {% else %}
        {# Usuario no autentificado permitimos registro y login #}
        <li class="list-group-item">
          <a href="{{ path('app_register') }}">Registrarse</a>
        </li>
        <li class="list-group-item">
          <a href="{{ path('app_login') }}">Iniciar sesión</a>
        </li>
      {% endif %}
    </ul>
  </div>
</div>
{% block body %}

{% endblock %}
