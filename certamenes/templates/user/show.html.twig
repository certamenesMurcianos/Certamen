{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Numero_de_musicos</th>
                <td>{{ user.numeroDeMusicos }}</td>
            </tr>
            <tr>
                <th>Nombre_director</th>
                <td>{{ user.nombreDirector }}</td>
            </tr>
            <tr>
                <th>Pueblo</th>
                <td>{{ user.pueblo }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ user.provincia }}</td>
            </tr>
            <tr>
                <th>Codigo_postal</th>
                <td>{{ user.codigoPostal }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ user.telefono }}</td>
            </tr>
